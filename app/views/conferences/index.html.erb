<p id="notice"><%= notice %></p>

<h1>Conferences</h1>

<table>
  <thead>
    <tr>
      <th>Conference name</th>
      <th>Conference date</th>
      <th>Conference capacity</th>
      <th>Conference attendance</th>
      <th>Conference description</th>
      <th>Conference speaker</th>
      <th>Conference location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conferences.each do |conference| %>
      <tr>
        <td><%= conference.conference_name %></td>
        <td><%= conference.conference_date %></td>
        <td><%= conference.conference_capacity %></td>
        <td><%= conference.conference_attendance %></td>
        <td><%= conference.conference_description %></td>
        <td><%= conference.conference_speaker %></td>
        <td><%= conference.conference_location %></td>
        <td><%= link_to 'Show', conference %></td>
        <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
        <td><%= link_to 'Destroy', conference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

